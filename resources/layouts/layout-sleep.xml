<layout id="WatchFaceSleep">
	<drawable id="Background" class="Background"/>

  <drawable id="DateAndTime" class="DateAndTime">
    <param name="burnInProtectionMode">false</param>
  </drawable>

  <drawable id="HeartrateDataField" class="SecondaryDataField">
    <param name="fieldId">FieldId.SLEEP_HR</param>
    <param name="offsetModifier">0</param>
    <param name="x">0.168 * dc.getWidth()</param>
    <param name="y">0.685 * dc.getHeight()</param>
  </drawable>
  <drawable id="NotificationDataField" class="SecondaryDataField">
    <param name="fieldId">FieldId.SLEEP_NOTIFY</param>
    <param name="offsetModifier">0.5</param>
    <param name="x">0.5 * dc.getWidth()</param>
    <param name="y">0.685 * dc.getHeight()</param>
  </drawable>
  <drawable id="AlarmsDataField" class="SecondaryDataField">
    <param name="fieldId">FieldId.SLEEP_ALARMS</param>
    <param name="offsetModifier">1</param>
    <param name="x">0.832 * dc.getWidth()</param>
    <param name="y">0.685 * dc.getHeight()</param>
  </drawable>
  
  <drawable id="BatteryDataField" class="RingDataField">
    <param name="fieldId">FieldId.SLEEP_BATTERY</param>
    <param name="showIcon">false</param>
    <param name="x">0.5 * dc.getWidth()</param>
    <param name="y">0.5 * dc.getHeight()</param>
    <param name="radius">0.5 * dc.getWidth() - dc.getWidth() * 0.01</param>
  </drawable>
</layout>