<layout id="SleepLayout">
	<drawable id="Background" class="Background"/>
  <drawable id="DateAndTime" class="DateAndTime">
    <param name="justifyDate">0</param>
  </drawable>

  <drawable id="SleepLeftDataField" class="SecondaryDataField">
    <param name="fieldId">Enums.FIELD_SLEEP_LEFT</param>
    <param name="position">2</param>
    <param name="x">0.168 * dc.getWidth()</param>
    <param name="y">0.685 * dc.getHeight()</param>
  </drawable>
  <drawable id="SleepMiddleDataField" class="SecondaryDataField">
    <param name="fieldId">Enums.FIELD_SLEEP_MIDDLE</param>
    <param name="position">1</param>
    <param name="x">0.5 * dc.getWidth()</param>
    <param name="y">0.685 * dc.getHeight()</param>
  </drawable>
  <drawable id="SleepRightDataField" class="SecondaryDataField">
    <param name="fieldId">Enums.FIELD_SLEEP_RIGHT</param>
    <param name="position">0</param>
    <param name="x">0.832 * dc.getWidth()</param>
    <param name="y">0.685 * dc.getHeight()</param>
  </drawable>
  
  <drawable id="SleepUpperDataField" class="SecondaryDataField">
    <param name="fieldId">Enums.FIELD_SLEEP_UP</param>
    <param name="position">2</param>
    <param name="x">0.168 * dc.getWidth()</param>
    <param name="y">0.31 * dc.getHeight() + 1</param>
    <param name="color">Enums.COLOR_PRIMARY</param>
  </drawable>
</layout>